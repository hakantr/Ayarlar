{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Lua Debug with Mobdebug",
      "type": "lua",
      "request": "launch",
      "program": "${workspaceFolder}/init.lua",  // debug edeceğiniz Lua dosyasının yolu
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,                      // False olduğunda programa hemen devam eder, True ise başta durur
      "mobdebug": true,                          // mobdebug kullanacağımızı belirtir
      "port": 8172                               // mobdebug tarafından kullanılan port
    }
  ]
}
